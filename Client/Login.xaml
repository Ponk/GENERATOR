<Window x:Class="Client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"  Width="300" Height="415" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">

        <StackPanel>
        <Image Height="230" Source="Assets/gen_logo.jpg" Margin="0,0,0,15"/>
        <Label Content="CONNEXION" BorderThickness="0" FontSize="14" FontFamily="Corbel" Background="{x:Null}" Height="23" HorizontalAlignment="Center" Foreground="#FF707070"/>
        <TextBox x:Name="TextBoxId" Height="23" Width="150" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,15,0,0"/>
            <PasswordBox x:Name="TextBoxMdp" VerticalAlignment="Top" Width="150" Height="23" Margin="0,5,0,0"/>
            <Button Content="Log in" VerticalAlignment="Top" Click="Button_Click_1" Height="23" Width="150" Margin="0,5,0,0" />
        <Rectangle Fill="#FF595959" Height="25" Margin="0,30,0,0" />
        
    </StackPanel>


</Window>
